<%= link_to product do %>
<div class="list">
  <h3><%= product.name %></h3>
  <p><%= product.description %></p>
  <p>Quantity: <%= product.quantity %></p>
  <p>Brand: <%= product.category.name %></p>
  <%if product.salePrice == nil%>
    <p>Price: $<%= product.price %></p>
  <%else%>
    <p>Price: <span style="text-decoration: line-through">$<%= product.price %></span><span style="color: red">$<%= product.salePrice %></span></p>
  <%end%>

  <%if product.image.present?%>
    <p><%= image_tag product.image.url, width:300 %></p>
  <%end%>
</div>
<%end%>