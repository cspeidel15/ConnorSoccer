<%= link_to product do %>
<div class="list">
  <h3><%= product.name %></h3>
  <p><%= product.description %></p>
  <p>Quantity: <%= product.quantity %></p>
  <p>Brand: <%= product.category.name %></p>
  <p>Price: $<%= product.salePrice %></p>
  <%if product.image.present?%>
    <p><%= image_tag product.image.url, width:300 %></p>
  <%end%>
</div>
<%end%>